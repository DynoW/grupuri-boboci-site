---
import Layout from "../layouts/Layout.astro";
import Phone from "../layouts/Phone.astro";
import FormImput from "../components/FormImput.astro";
---

<Layout title="Welcome to Astro.">
	<div class="main">
		<h1 class="title">Grupuri boboci</h1>
		<Phone>
			<img class="image-1" src="/img/person-1.webp" alt="girl with laptop"/>
			<div class="h1">
				<h1>Bun venit!</h1>
			</div>
			<div class="h2">
				<h1>
					Caută-ți grupul de WhatsApp folosind codul de elev de la
					evaluarea națională.
				</h1>
			</div>
			<FormImput />
		</Phone>
	</div>
</Layout>

<style>
	html {
		background-image: url('/img/bg-image.webp');
    	background-repeat: no-repeat;
    	background-size: cover;
	}
	.main {
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
		min-height: 100vh;
	}
	.title {
		margin: 0;
		font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto",
			"Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans",
			"Helvetica Neue", sans-serif;
	}
	.image-1 {
		flex: none;
		order: 0;
		flex-grow: 0;
		height: 305px;
		width: 200px;
	}
	.h1 {
		font-family: "Inter";
		font-style: normal;
		font-weight: 700;
		font-size: 20px;
		line-height: 40px;
		text-align: center;
		color: #161c2b;
		flex: none;
		order: 1;
		flex-grow: 0;
	}
	.h2 {
		font-family: "Poppins";
		font-style: normal;
		font-weight: 400;
		font-size: 7px;
		line-height: 21px;
		text-align: center;
		padding: 0 10px;
		color: #161c2b;
		flex: none;
		order: 2;
		flex-grow: 0;
	}

	@media only screen and (max-width: 500px) and (min-height: 750px) {
		.title {
			position: absolute;
			top: 15px;
			font-size: 40px;
		}
		.h1 {
			font-size: 20px;
		}
		.h2 {
			font-size: 9px;
			margin-top: 10%;
		}
		.image-1 {
			margin-top: 20%;
			width: 228px;
			height: 348px;
		}
	}
	@media only screen and (max-width: 500px) and (max-height: 749px) {
		.title {
			position: absolute;
			top: 15px;
			font-size: 40px;
		}
	}
</style>
